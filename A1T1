#To read the file and make the necessary changes:
import requests
response = requests.get(‘https://raw.githubusercontent.com/Veeanna/ACST_s1_2019/master/twain.txt’)
print(response.text)
twain = response.text
print(twain.replace("Huck", "HucK"))

#Question 3
def leap_year(y):
    if y % 400 == 0:
        return True
    if y % 100 == 0:
        return False
    if y % 4 == 0:
        return True
    else:
        return False
#To test out the code:
print(leap_year(1990))
print(leap_year(2004))

#Question 4
#For a=1 and b=100, to take 1 random integer between 1 and 100
a = 1
b = 100
import random
y = random.randint(a,b)
print(y)

#Question 5
def date(d,m):
   if d<21 and m <4:
     return False
   if d>20 and m>5:
     return False
   else:
     return True
print(date(5,3))
print(date(1,5))
print(date(12,6))
print(date(20,3))
